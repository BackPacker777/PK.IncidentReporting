<% include public/views/header.ejs %>
<% include public/views/no_print.ejs %>

<div class="row" id="topMast">
	<div class="small-6 columns">
		<h2>PK Incident Reporting - 2019</h2>
	</div>
    <div class="small-2 columns text-center small-vertical-middle"><span class="button large expanded" id="archivesButton">Archives</span></div>
	<div class="small-2 columns text-right medium-vertical-middle"><h5>INCIDENT #:</h5></div>
    <div class="small-1 columns text-left medium-vertical-middle"><h5 id="incidentNumber">0</h5></div>
	<div class="small-1 columns center">
		<img src="public/images/NSP_Logo.png" alt="NSP Logo" id="nspLogo" width="80" height="100">
	</div>
</div>
<div class="panel radius">
	<form id="mainForm" action="javascript:0">
		<div class="row" id="topStuff">
			<fieldset id="dateTime">
            <legend>Date &amp; Time</legend>
                <div class="row">
                    <div class="small-4 columns">
                        <span class="label">Day</span><br>
                        <input name="day" id="day" type="text" required>
                    </div>
                    <div class="small-4 columns">
                        <span class="label">Date</span><br>
                        <input name="date" id="date" type="text" required>
                    </div>
                    <div class="small-4 columns end">
                        <span class="label">Incident Time</span><br>
                        <input name="incidentTime" id="incidentTime" type="time" autofocus required>
                    </div>
                </div>
			</fieldset>
		</div>


			<% include public/views/personal_info.ejs %>

			<% include public/views/patient_history.ejs %>

			<% include public/views/locations_history.ejs %>

			<% include public/views/equipment.ejs %>

			<% include public/views/incidentDesc_conditions.ejs %>

			<% include public/views/injury_data.ejs %>

			<% include public/views/firstAid_patrollers_transDest.ejs %>

			<% include public/views/witness_completer.ejs %>

            <% include public/views/archives.ejs %>

			<div class="row" id="bottomStuff">
				<fieldset id="buttons">
					<div class="row">
						<div class="small-3 columns">
							<input type='submit' id='submit' value='Completed!' class="button large">
							<!--<span class="button large" id="submit">Completed!</span>-->
						</div>
						<div class="small-3 columns float-right">
							<input type="reset" class="button large alert float-right" id="reset" value="Reset Form">
						</div>
					</div>
				</fieldset>
			</div>
	</form>
</div>

<% include public/views/footer.ejs %>